<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.mydns.diams.pinpointlandingdrone.layout.BeaconListFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/list_newBeacon_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_newBeacon_editText"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:text="新しいビーコン："
        android:textSize="18sp" />

    <EditText
        android:id="@+id/list_newBeacon_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="none"
        android:layout_alignBottom="@+id/list_regist_button"
        android:layout_toStartOf="@+id/list_regist_button"
        android:layout_toEndOf="@+id/list_newBeacon_textView" />

    <Button
        android:id="@+id/list_regist_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="登録" />

    <ListView
        android:id="@+id/list_beacon_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_newBeacon_textView"
        android:layout_above="@+id/list_complete_button"/>

    <Button
        android:id="@+id/list_complete_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完了"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
