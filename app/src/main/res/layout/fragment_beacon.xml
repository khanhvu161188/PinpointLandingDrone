<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.mydns.diams.pinpointlandingdrone.layout.BeaconFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/beacon_proximity_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="近接ビーコン："
        android:textSize="18sp"
        android:layout_below="@+id/beacon_rssi_table"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/beacon_proximityId_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/beacon_proximity_textView"
        android:layout_alignBottom="@+id/beacon_proximity_textView"
        android:layout_toEndOf="@+id/beacon_proximity_textView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/beacon_significant_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/beacon_proximity_textView"
        android:text="有意差："
        android:textSize="18sp" />

    <TextView
        android:id="@+id/beacon_truefalse_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beacon_proximity_textView"
        android:layout_toEndOf="@+id/beacon_significant_textView"
        android:textSize="18sp" />

    <TableLayout
        android:id="@+id/beacon_rssi_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/beacon_title_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#bbbbbb">

            <TextView
                android:id="@+id/beacon_ID_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="ビーコンID"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/beacon_rssi_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="0.5dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="RSSI"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>
</RelativeLayout>
